<?xml version="1.0" encoding="UTF-8"?>
<window>

	<defaultcontrol>2</defaultcontrol>
	
	<controls>
	
		<!--all content-->
		<control type="group">
			<left>-355</left>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="0,0" end="-125,0" time="300" condition="Window.IsActive(ShutdownMenu)">Conditional</animation>
			
			<!--background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--left shadow-->
			<control type="image">
				<left>685</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--right shadow-->
			<control type="image">
				<left>1925</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>sidebarshadow.png</texture>
			</control>
				
			<!--title background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>110</height>
				<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			
			<!--subtitle background-->
			<control type="image">
				<left>715</left>
				<top>110</top>
				<width>1210</width>
				<height>55</height>
				<texture background="true" colordiffuse="$VAR[Colour.900]">backgrounds/white.png</texture>
			</control>
			
			<!--title shadow-->
			<control type="image">
				<left>715</left>
				<top>110</top>
				<width>1210</width>
				<height>20</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--subtitle shadow-->
			<control type="image">
				<left>715</left>
				<top>165</top>
				<width>1210</width>
				<height>20</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--close window button-->
			<control type="button">
				<left>720</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>

			<!--main content-->
			<control type="group">
				<left>715</left>
				<top>0</top>

				<!--title-->
				<control type="label">
					<left>60</left>
					<top>25</top>
					<width>1090</width>
					<height>60</height>
					<font>info.title</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$LOCALIZE[31048]</label>
				</control>
						
				<control type="label" id="4">
					<description>No Settings Label</description>
					<left>60</left>
					<top>270</top>
					<width>1090</width>
					<align>center</align>
					<label>13389</label>
				</control>
				
				<control type="list" id="2">
					<left>60</left>
					<top>185</top>
					<width>1080</width>
					<height>884</height>
					<onleft>60</onleft>
					<onright>60</onright>
					<onup>2</onup>
					<ondown>2</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime>200</scrolltime>
					
					<itemlayout height="68" width="1080">

						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>1050</width>
							<height>60</height>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						
					</itemlayout>
					
					<focusedlayout height="68" width="1080">
					
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>1080</width>
							<height>60</height>
							<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
							<animation effect="fade" start="100" end="30" time="100" condition="!Control.HasFocus(2)">Conditional</animation>
						</control>
						
						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>1050</width>
							<height>60</height>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						
					</focusedlayout>
					
				</control>
				
				<control type="scrollbar" id="60">
					<left>1150</left>
					<top>185</top>
					<height>876</height>
					<texturesliderbackground colordiffuse="scroll.secondary">backgrounds/white.png</texturesliderbackground>
					<texturesliderbar colordiffuse="secondary">backgrounds/white.png</texturesliderbar>
					<onleft>2</onleft>
					<onright>2</onright>
					<ondown>60</ondown>
					<onup>60</onup>
				</control>
				
				<!--item count-->
				<control type="label">
					<left>60</left>
					<top>110</top>
					<width>1090</width>
					<height>55</height>
					<font>button</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
					<textcolor>white</textcolor>
					<label>$INFO[Container(2).NumItems] $LOCALIZE[31025] ($LOCALIZE[31024] $INFO[Container(2).CurrentPage]/$INFO[Container(2).NumPages])</label>
				</control>
				
			</control>
			
		</control>
		
	</controls>
	
</window>